<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleJugadorActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4">
        <ImageView
            android:id="@+id/imagenJugador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/caballero_mapa"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nivel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="@string/nivel"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/ganadas"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />
                <ListView
                    android:id="@+id/ganadas"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"></ListView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="@string/perdidas"
                    android:textAlignment="center"
                    android:textStyle="bold" />
                <ListView
                    android:id="@+id/perdidas"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"></ListView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>